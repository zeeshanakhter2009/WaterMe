rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function authed() {
      return request.auth != null;
    }

    match /users/{uid} {
      allow read, write: if authed() && request.auth.uid == uid;

      match /hydration/{day} {
        allow read, write: if authed() && request.auth.uid == uid;
      }

      match /badges/{code} {
        allow read, write: if authed() && request.auth.uid == uid;
      }

      match /streak/{document=**} {
        allow read, write: if authed() && request.auth.uid == uid;
      }
    }

    match /badgesCatalog/{code} {
      allow read: if true;
      allow write: if false;
    }

    match /appConfig/{doc} {
      allow read: if true;
      allow write: if false;
    }
  }
}
